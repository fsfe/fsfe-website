# =============================================================================
# FELLOWSHIP AND DONATIONS
# =============================================================================

# Old /fellowship pages
RewriteRule ^/fellowship/donate.*    https://my.fsfe.org/donate [R=301]
RewriteRule ^/fellowship/join.*    https://my.fsfe.org/support [R=301]
RewriteRule ^/fellowship/login.*   https://my.fsfe.org/ [R=301]
RewriteRule ^fellowship/card https://wiki.fsfe.org/TechDocs/CardHowtos [R=301]
RewriteRule ^fellowship/communicate /contact/community.html [R=301]
RewriteRule ^fellowship/contact /contact/contact.html [R=301]
RewriteRule ^fellowship/events(.*) https://fsfe.org/events$1 [R=301]
RewriteRule ^fellowship/faq https://wiki.fsfe.org/KnowHow/FSFELife/FAQ [R=301]
RewriteRule ^fellowship/graphics/people - [L]
RewriteRule ^fellowship/groups/berlin https://wiki.fsfe.org/LocalGroups/Berlin [R=301]
RewriteRule ^fellowship/groups/coordinators https://wiki.fsfe.org/Teams/Coordinators [R=301]
