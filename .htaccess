RewriteEngine On

# Favicon
RewriteRule ^favicon.ico /graphics/fsfe.ico [R=301]
RewriteRule ^graphics/fsfeurope.ico /graphics/fsfe.ico [R=301]


# =============================================================================
# SHORT URLS
# =============================================================================

# Redirect
RewriteRule ^translate /contribute/translators/ [R=301]

# AskYourCandidates
RewriteRule ^campaigns/ayc(.*) /campaigns/askyourcandidates$1 [R=301]

# NoCloud campaign, as printed on posters
RewriteRule ^nocloud(/.*)?	/activities/nocloud$1	[R=301]

# Promotion material order
RewriteRule ^promo(/.*)?	/contribute/spreadtheword$1	[R=301]

# Convince your friends
RewriteRule   ^(cyf|convince).*      http://wiki.fsfe.org/ConvinceYourFriends        [R=301]

# Summit 2016
RewriteRule	^summit16(/.*)?$	https://fsfe.org/community/events/2016/summit/frontpage$1 [R=301]
#RewriteRule	^summit16(/.*)?$	https://wiki.fsfe.org/Events/Summit2016/CallForParticipation$1	[R=301]

# 15 years of FSFE
RewriteRule	^15(/.*)?$		https://fsfe.org/campaigns/15years/15years$1 [R=301]

# EU policies wiki page, e.g. linked from the PMPC brochure
RewriteRule ^fs-policies/?$ https://wiki.fsfe.org/Activities/EU_Policies_overview_FS [R=301]

# Share buttons
RewriteRule ^share/?$ /cgi-bin/share.php [NC,L]


# =============================================================================
# CAMPAIGN/TOPIC-SPECIFIC REDIRECTS
# =============================================================================

# Podcast
RewriteRule ^news/podcast/?$ /news/podcast.html [R=301]
RewriteRule ^news/podcast.rss$ /news/podcast.en.rss [L,R=301]
RewriteRule ^news/podcast-opus.rss$ /news/podcast-opus.en.rss [L,R=301]

# ILoveFS
RewriteRule ^campaigns/ilovefs((/?)|(/[^/]*).html)$ /campaigns/ilovefs/2019$1 [PT] # UPDATE year
RewriteRule ^campaigns/ilovefs/latest-report(.*)$ /news/2019/news-20190329-01.html [R=301] # UPDATE always link to latest available report
RewriteRule ^campaigns/ilovefs/ilovefs(.*)html$ /campaigns/ilovefs/index$1html [R=301]
RewriteRule ^campaigns/ilovefs/(201[2-5])/index(.*)$ /campaigns/ilovefs/$1/ [R=301]
RewriteRule ^campaigns/ilovefs/(201[2-5])(/?)$ /campaigns/ilovefs/$1/ilovefs.html
# old URLs
RewriteRule ^valentine.* /campaigns/ilovefs [R=301]
RewriteRule ^vd20.* /campaigns/ilovefs [R=301]
RewriteRule ^campaigns/valentine.* /campaigns/ilovefs [R=301]
RewriteRule ^campaigns/vd20.* /campaigns/ilovefs [R=301]

# Help section
RewriteRule ^help/?$ /contribute/ [R=301]
RewriteRule ^help/index(.*) /contribute/contribute$1 [R=301]
RewriteRule ^help/help(.*) /contribute/contribute$1 [R=301]
RewriteRule ^help/web\.(.*) /contribute/web/web.$1 [R=301]
RewriteRule ^help/(.*) /donate/$1 [R=301]

# Legal team pages
RewriteRule ^ftf(.*) /activities/ftf$1 [R=301]
RewriteRule ^legal(.*) /activities/ftf$1 [R=301]
RewriteRule ^activities/ftf/rough-guide-for-users(.*) /projects/ftf/useful-tips-for-users$1 [R=301]
RewriteRule ^activities/ftf/rough-guide-for-vendors(.*) /projects/ftf/useful-tips-for-vendors$1 [R=301]
RewriteRule ^activities/ftf/contact(.*) /contact/contact$1#ftf [NE,R=301]
RewriteRule ^activities/ftf/form(.*) /contact/contact$1#ftf [NE,R=301]
RewriteRule ^activities/ftf/ftf\.(.*)html /activities/ftf/activities.$1html [R=301]
RewriteRule ^activities/ftf/$ /activities/ftf/activities.html [R=301]
RewriteRule ^activities/ftf/index\.(.*)html /activities/ftf/activities.$1html [R=301]
RewriteRule ^activities/ftf/network\.(.*)html /activities/ftf/ln.$1html [R=301]
RewriteRule ^activities/ftf/recommended\.(.*)html /activities/ftf/licence-questions.$1html [R=301]
RewriteRule ^activities/ftf/legal-network-policy\.(.*)html /activities/ftf/ln-rules.$1html [R=301]
RewriteRule ^activities/ftf/education /activities/ftf/services.html [R=301]


# =============================================================================
