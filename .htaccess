# =============================================================================
# MERCHANDISE / PROMO
# =============================================================================

# Old pages
RewriteRule ^about/printable(/.*)?$ /contribute/spreadtheword/ [R=301,L]


# =============================================================================
# MISCELLANEOUS
# =============================================================================

